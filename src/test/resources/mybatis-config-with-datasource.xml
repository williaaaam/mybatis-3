<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

  <properties resource="jdbc.properties"/>

  <!--与Spring整合后，将不再需要environments-->
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <!--PooledDataSourceFactory-->
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <!--<property name="org.apache.ibatis.parsing.PropertyParser.enable-default-value" value="true"/>--> <!-- 启用默认值特性 -->
        <!--从Mybatis 3.4.2开始，可以为占位符指定默认值，如果属性driver没有被配置，'com.mysql.cj.jdbc.Driver将被视为默认值'；这个特定默认是关闭的，-->
        <!--<property name="driver" value="${driver:com.mysql.cj.jdbc.Driver}"/>-->
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>

  <mappers>
    <mapper resource="mapper/ProductionMapper-with-$.xml"/>
  </mappers>

</configuration>
